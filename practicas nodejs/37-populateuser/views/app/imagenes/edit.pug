extends ../../layout.pug
block contenido
        
        div(class="col-md-6 mx-auto big-top-space")
            h1 Sube tu imagen 
            form(action="/app/imagenes/"+imagen._id+"?_method=PUT",method="POST")
                input(type="hidden", value="PUT",name="_method")
                div(class="form-group")
                    laber(for="title") Titulo
                    input(value=imagen.title class="form-control" type="text",name="title",placeholder="Ingresa el titulo del archivo",id="title")
                div(class="form-group")
                    laber(for="file") Archivo
                    input(class="form-control" type="file",name="file",id="file")
                div(class="row top-space")
                    div(class="col-xs col-sm-6")
                         input(type="submit", value="enviar" class="btn btn-info top-space")
